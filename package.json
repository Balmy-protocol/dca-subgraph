{
  "name": "dca-subgraph",
  "version": "0.0.0",
  "license": "",
  "scripts": {
    "codegen": "rm -rf generated && graph codegen",
    "build:kovan": "yarn prepare:kovan && graph build",
    "build:ropsten": "yarn prepare:ropsten && graph build",
    "build:mainnet": "yarn prepare:mainnet && graph build",
    "thegraph:deploy:kovan": "graph deploy --debug --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ alejoamiras/dca-kovan",
    "thegraph:deploy:ropsten": "graph deploy --debug --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ alejoamiras/dca-ropsten",
    "thegraph:deploy:mainnet": "graph deploy --debug --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ alejoamiras/dca-mainnet",
    "prepare:kovan": "mustache config/kovan.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "deploy:kovan": "yarn build:kovan && yarn thegraph:deploy:kovan",
    "deploy:ropsten": "yarn build:ropsten && yarn thegraph:deploy:ropsten",
    "release": "standard-version",
    "deploy:mainnet": "yarn build:mainnet && yarn thegraph:deploy:mainnet",
    "lint:check": "prettier --check './**'",
    "lint:fix": "sort-package-json && prettier --write './**'",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.20.1",
    "@graphprotocol/graph-ts": "0.20.0",
    "mustache": "4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "husky": "6.0.0",
    "pinst": "2.1.6",
    "prettier": "2.3.1",
    "sort-package-json": "1.50.0",
    "standard-version": "9.3.0"
  },
  "authors": [
    {
      "name": "Alejo Amiras",
      "email": "alejo.amiras@gmail.com",
      "url": "https://github.com/alejoamiras"
    }
  ]
}
